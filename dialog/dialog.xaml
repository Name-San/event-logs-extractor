<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register Device" Height="240" Width="280" Background="#fafafa">
    <Grid>
        <!-- Label for Device ID -->
        <TextBlock Text="Add Device ID:" 
                   HorizontalAlignment="Left" VerticalAlignment="Top" 
                   Margin="20,20,0,0" FontWeight="Bold"/>

        <!-- Input bar for Device ID -->
        <TextBox Name="DeviceIDTextBox" 
                 Width="220" Height="25" 
                 Padding="2,3,0,0"
                 HorizontalAlignment="Left" VerticalAlignment="Top" 
                 Margin="20,40,0,0" Background="#ffffff"/>

        <!-- Label for Site -->
        <TextBlock Text="Select Site:" 
                   HorizontalAlignment="Left" VerticalAlignment="Top" 
                   Margin="20,75,0,0" FontWeight="Bold"/>

        <!-- Dropdown menu for Site -->
        <ComboBox Name="SiteComboBox" 
                  Width="220" Height="25" 
                  HorizontalAlignment="Left" VerticalAlignment="Top" 
                  Margin="20,95,0,0" Background="#ffffff">
            <ComboBoxItem Content="Cebu" Background="#ffffff"/>
            <ComboBoxItem Content="Eastwood" Background="#ffffff"/>
        </ComboBox>

        <!-- Add Button -->
        <Button Name="AddButton"
                Content="Add" 
                Width="220" Height="25" 
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="20,150,0,0" Background="#1994ff" Foreground="White" FontWeight="Bold"/>
    </Grid>
</Window>
