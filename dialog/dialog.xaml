<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register Device" Height="130" Width="360">
    <Grid>
        <!-- Label for Device ID -->
        <TextBlock Text="Add Device ID:" 
                   HorizontalAlignment="Left" VerticalAlignment="Top" 
                   Margin="20,20,0,0" FontWeight="Bold"/>

        <!-- Input bar for Device ID -->
        <TextBox Name="DeviceIDTextBox" 
                 Width="150" Height="25" 
                 Padding="2,3,0,0"
                 HorizontalAlignment="Left" VerticalAlignment="Top" 
                 Margin="110,15,0,0"/>

        <!-- Start Scan Button -->
        <Button Name="AddButton"
                Content="Add" 
                Width="50" Height="25" 
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="262,15,0,0" Background="LightGray" FontWeight="Bold"/>

        <!-- Status Label -->
        <TextBlock Name="StatusLabel" 
                   HorizontalAlignment="Left" VerticalAlignment="Top" 
                   Margin="20,60,0,0" FontWeight="Bold" Foreground="Gray" 
                   Text="Ex: PC1, PC2"/>
    </Grid>
</Window>
